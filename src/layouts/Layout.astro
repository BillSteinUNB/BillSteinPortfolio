---
// @ts-nocheck
import Header from '../components/Header.astro'; // Import the Header component
// Script will be included via <script> tag below

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<canvas id="bgCanvas"></canvas>
		<Header /> <!-- Use the Header component -->
		<main>
			<slot />
		</main>
		<script src="../scripts/StarryBackground.js"></script>
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background-color: #000; /* Base background color */
		color: #fff; /* Default text color */
		scroll-behavior: smooth; /* Enable smooth scrolling */
	}
	body {
		margin: 0; /* Remove default body margin */
		min-height: 100vh; /* Ensure body takes full viewport height */
		position: relative; /* Needed for absolute positioning of canvas */
		overflow-x: hidden; /* Prevent horizontal scroll */
	}
	#bgCanvas {
		position: fixed; /* Keep canvas fixed in the background */
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1; /* Place canvas behind content */
	}
	/* Removed header placeholder styles, now handled in Header.astro */
	main {
		position: relative; /* Ensure main content is above canvas */
		z-index: 1;
		padding-top: 60px; /* Adjust based on header height */
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
