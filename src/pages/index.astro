---
// src/pages/index.astro - Main Single-Page Application Container
import Layout from '../layouts/Layout.astro';
import AboutSection from '../components/AboutSection.astro';
import ProjectsSection from '../components/ProjectsSection.astro';

// Define page title
const pageTitle = "Bill Stein - Portfolio";
---
<Layout title={pageTitle}>
  <!-- Main Section -->
  <section id="home" class="page-section main-section">
    <div class="section-overlay">
      <div class="main-content">
        <h1 class="glow">Bill Stein</h1>
        <p>Full Stack Developer</p>
      </div>
    </div>
    <style>
      .main-section {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        padding: 0px;
        position: relative;
      }

      .main-content {
        position: absolute;
        top: 35%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 100%;
      }

      .main-section h1 {
        font-size: 5.5rem;
        margin-bottom: 1rem;
        font-weight: bold;
      }

      .glow {
        color: #fff;
        text-shadow: 0 0 15px rgba(255, 255, 255, 0.5),
                    0 0 25px rgba(255, 255, 255, 0.3),
                    0 0 35px rgba(255, 255, 255, 0.2),
                    0 0 45px rgba(255, 255, 255, 0.1),
                    0 0 55px rgba(255, 255, 255, 0.05);
        transition: text-shadow 0.3s ease;
      }

      .glow:hover {
        text-shadow: 0 0 20px rgba(255, 255, 255, 0.6),
                    0 0 30px rgba(255, 255, 255, 0.4),
                    0 0 40px rgba(255, 255, 255, 0.3),
                    0 0 50px rgba(255, 255, 255, 0.2),
                    0 0 60px rgba(255, 255, 255, 0.1);
      }

      .main-section p {
        font-size: 2.2rem;
        color: #aaa;
        margin-top: 0.5rem;
      }

      /* Inherit .page-section styles or define globally */
      .page-section {
        min-height: 100vh;
        padding: 60px 20px;
      }
    </style>
  </section>
   <style>
      .contact-section {
        min-height: 50vh; /* Shorter section example */
        text-align: center;
      }
       /* Inherit .page-section styles or define globally */
       .page-section {
        min-height: 100vh;
        padding: 60px 20px;
      }
       h2 {
        text-align: center;
        margin-bottom: 2rem;
        font-size: 2.5rem;
      }
    </style>

  <!-- About Section -->
  <AboutSection />
<!-- Projects Section -->
<ProjectsSection />
  

  <!-- Contact Section Placeholder -->
  <section id="contact" class="page-section contact-section">
    <div class="section-overlay">
      <h2>Contact Me</h2>
      <p>
        Placeholder for contact information (Email, LinkedIn) or a contact form.
    </div>
      <!-- TODO: Add actual contact details/form -->
    </p>
  </section>
</Layout>