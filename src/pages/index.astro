---
// src/pages/index.astro - Main Single-Page Application Container
import Layout from '../layouts/Layout.astro';
import AboutSection from '../components/AboutSection.astro';
import ProjectsSection from '../components/ProjectsSection.astro';

// Define page title
const pageTitle = "Bill Stein - Portfolio";
---
<Layout title={pageTitle}>
  <!-- Hero Section Placeholder -->
  <section id="home" class="page-section hero-section">
    <h1>Bill Stein</h1>
    <p>Software Developer | [Your Tagline Here]</p>
    <!-- TODO: Add more content, styling, and potentially a CTA -->
    <style>
      .hero-section {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        padding: 20px;
        border-bottom: 1px solid #333; /* Example separator */
      }
      .hero-section h1 {
        font-size: 3.5rem;
        margin-bottom: 0.5rem;
      }
      .hero-section p {
        font-size: 1.5rem;
        color: #aaa; /* Lighter text for tagline */
      }
      /* Inherit .page-section styles or define globally */
       .page-section {
        min-height: 100vh;
        padding: 60px 20px;
        border-bottom: 1px solid #333;
      }
    </style>
  </section>
   <style>
      .contact-section {
        min-height: 50vh; /* Shorter section example */
        text-align: center;
      }
       /* Inherit .page-section styles or define globally */
       .page-section {
        min-height: 100vh;
        padding: 60px 20px;
        border-bottom: 1px solid #333; /* Remove border for last section if desired */
      }
       h2 {
        text-align: center;
        margin-bottom: 2rem;
        font-size: 2.5rem;
      }
    </style>

  <!-- About Section -->
  <AboutSection />

  <!-- Projects Section -->
  <ProjectsSection />

  <!-- Contact Section Placeholder -->
  <section id="contact" class="page-section contact-section">
    <h2>Contact Me</h2>
    <p>
      Placeholder for contact information (Email, LinkedIn) or a contact form.
      <!-- TODO: Add actual contact details/form -->
    </p>
  </section>
</Layout>